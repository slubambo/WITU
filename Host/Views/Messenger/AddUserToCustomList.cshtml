@model ARMSv2.Models.CustomListReceipient
@{
    ViewBag.Title = "Add User To CustomList";
}


<div class="pull-right">
    <div class="btn"><span class="fa fa-inbox"></span>  @Html.ActionLink("Inbox", "Inbox", "Messenger")</div>
    <div class="btn"><span class="fa fa-paper-plane"></span>  @Html.ActionLink("Sent", "SentMessages", "Messenger")</div>
    <div class="btn"><span class="fa fa-floppy-o"></span>  @Html.ActionLink("Drafts", "Drafts", "Messenger")</div>
    <div class="btn"><span class="fa fa-trash-o"></span>  @Html.ActionLink("Trash", "Trash", "Messenger")</div>
</div>
<div class="clearfix"></div>

<h4 class="blueHeader">Either Pick from Users</h4>

<div class="row form-group" id="Ms_ToSelect">
    <p class="col-md-3 control-label">Recipient User Type</p>
    <div class="col-md-9 progCoreInput">
        <select id="drpUserType" autocomplete="off">
            <option value="0" selected>-- Select User Type -- </option>
            <option value="1">Staff</option>
            <option value="2">Students</option>
        </select>

    </div>
</div>


<div class="row form-group" id="Ms_StaffRoles">
    <p class="col-md-3 control-label">Staff Category</p>
    <div class="col-md-6 progCoreInput">
        <select id="sendtoType" class=""></select>
        <div class="checkbox pull-right">
            <input type="checkbox" id="chkRoleCategory" autocomplete="off" class="checkbox-inline" title="Include Staff Roles" />
            <span id="spnRoles" class="checkbox-inline">Include</span>
        </div>
    </div>
</div>

<div class="row form-group" id="Ms_position">
    <p class="col-md-3 control-label">Position</p>
    <div class="col-md-6 progCoreInput">
        <select id="drpPosition"></select>
        <div class="checkbox pull-right">
            <input type="checkbox" id="chkPosition" autocomplete="off" class="checkbox-inline" title="Include Staff Position" />
            <span id="spnPosition" class="checkbox-inline">Include</span>
        </div>
    </div>

</div>

<div class="row form-group" id="Ms_campus">
    <p class="col-md-3 control-label">Campus</p>
    <div class="col-md-9 progCoreInput">
        <select id="drpcampus" class=""></select>
    </div>
</div>

<div class="row form-group" id="Ms_faculty">
    <p class="col-md-3 control-label">Faculty</p>
    <div class="col-md-6 progCoreInput">
        <select id="drpfaculty" class=""></select>
        <div class="checkbox pull-right">
            <input type="checkbox" id="chkFaculty" autocomplete="off" class="checkbox-inline" title="Include Faculty" />
            <span id="spnFaculty" class="checkbox-inline">Include</span>
        </div>
    </div>
</div>

<div class="row form-group" id="Ms_department">
    <p class="col-md-3 control-label">Department</p>
    <div class="col-md-6 progCoreInput">
        <select id="drpdepartment" class=""></select>
        <div class="checkbox pull-right">
            <input type="checkbox" id="chkDepartment" autocomplete="off" class="checkbox-inline" title="Include Faculty" />
            <span id="spnDepartment" class="checkbox-inline">Include</span>
        </div>
    </div>
</div>


<div class="row form-group studentOnly" id="Ms_programme">
    <p class="col-md-3 control-label">Programme</p>
    <div class="col-md-6 progCoreInput">
        <select id="drpprogramme" class=""></select>
        <div class="checkbox pull-right">
            <input type="checkbox" id="chkProgramme" autocomplete="off" class="checkbox-inline" title="Include Faculty" />
            <span id="spnProgramme" class="checkbox-inline">Include</span>
        </div>
    </div>
</div>

<div class="row form-group studentOnly" id="Ms_specialisation">
    <p class="col-md-3 control-label">Specialisation</p>
    <div class="col-md-6 progCoreInput">
        <select id="drpSpecialisation" class=""></select>
        <div class="checkbox pull-right">
            <input type="checkbox" id="chkSpecialisation" autocomplete="off" class="checkbox-inline" title="Include Faculty" />
            <span id="spnSpecialisation" class="checkbox-inline">Include</span>
        </div>
    </div>
</div>

<div class="row form-group studentOnly" id="Ms_studyPeriod">
    <p class="col-md-3 control-label">Study Type</p>
    <div class="col-md-6 progCoreInput">
        <select id="drpStudyPeriod" class=""></select>
        <div class="checkbox pull-right">
            <input type="checkbox" id="chkStudyPeriod" autocomplete="off" class="checkbox-inline" title="Include Faculty" />
            <span id="spnStudyPeriod" class="checkbox-inline">Include</span>
        </div>
    </div>
</div>

<div class="row form-group studentOnly" id="Ms_academicYear">
    <p class="col-md-3 control-label">Academic Year</p>
    <div class="col-md-6 progCoreInput">
        <select id="drpAcademicYear" class=""></select>
        <div class="checkbox pull-right">
            <input type="checkbox" id="chkAcademicYear" autocomplete="off" class="checkbox-inline" title="Include Faculty" />
            <span id="spnAcademicYear" class="checkbox-inline">Include</span>
        </div>
    </div>
</div>

<div class="row form-group studentOnly" id="Ms_yearOfStudy">
    <p class="col-md-3 control-label">Year of Study</p>
    <div class="col-md-6 progCoreInput">
        <select id="drpYearOfStudy">
            <option value="0" selected="true">All</option>
            <option value="1">Year I</option>
            <option value="2">Year II</option>
            <option value="3">Year III</option>
            <option value="4">Year IV</option>
            <option value="5">Year V</option>
        </select>
        <div class="checkbox pull-right">
            <input type="checkbox" id="chkYearOfStudy" autocomplete="off" class="checkbox-inline" title="Include Faculty" />
            <span id="spnYearOfStudy" class="checkbox-inline">Include</span>
        </div>
    </div>
</div>

<div class="row form-group studentOnly" id="Ms_semester">
    <p class="col-md-3 control-label">Semester</p>
    <div class="col-md-6 progCoreInput">
        <select id="drpSemester">
            <option value="0" selected="true">All</option>
            <option value="1">Semester 1</option>
            <option value="2">Semester 2</option>
        </select>
        <div class="checkbox pull-right">
            <input type="checkbox" id="chkSemester" autocomplete="off" class="checkbox-inline" title="Include Faculty" />
            <span id="spnSemester" class="checkbox-inline">Include</span>
        </div>
    </div>
</div>

<div class="row form-group studentOnly" id="Ms_course">
    <p class="col-md-3 control-label">Course</p>
    <div class="col-md-6 progCoreInput">
        <select id="drpCourse" class=""></select>
        <div class="checkbox pull-right">
            <input type="checkbox" id="chkCourse" autocomplete="off" class="checkbox-inline" title="Include Faculty" />
            <span id="spnCourse" class="checkbox-inline">Include</span>
        </div>
    </div>
</div>

<div class="row form-group" id="customList">
    <p class="col-md-3 control-label">Custom Lists</p>
    <div class="col-md-6 progCoreInput">
        <select id="drpCustomLists" class=""></select>

    </div>
</div>

<div class="row form-group">
    <div class="col-md-5 col-xs-push-3">
        <input type="button" value="Load Users" id="btnLoadUsers" class="saveBtn" />

    </div>
</div>

<div class="row form-group" id="Ms_To">
    <p class="col-md-3 control-label">Select Users </p>
    <div class="col-md-9 progCoreInput">
        <select class="js-example-tokenizer form-control" multiple="multiple"></select>

    </div>
</div>

<div class="col-md-offset-7">
    <div class="col-md-5">
        <input type="button" value="Add User to List" id="btnAddToList" class="saveBtn" />

    </div>
</div>
@Html.HiddenFor(m => m.CustomListId, new { id = "customListId" })

<div class="clearfix"></div>
<br/>
@using (Html.BeginForm("AddUserToCustomList", "Messenger", FormMethod.Post))
{
    <h4 class="blueHeader">Or add Recipient not in the System</h4>

    <div class="form-group row">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 progCoreInput">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>


    <div class="form-group row">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 progCoreInput">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.Position, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 progCoreInput">
            @Html.TextBoxFor(m => m.Position, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Position)
        </div>
    </div>

    @Html.HiddenFor(m => m.CustomListId)

    @Html.HiddenFor(m => m.UserId)
    
    <div class="clearfix"></div>
    <div class="col-md-offset-7">
    <div class="col-md-5">
        <input type="submit" value="Add User to List" id="" class="saveBtn" />

    </div>
</div>
}

