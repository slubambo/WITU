@model ARMSv2.Models.graduation.AddGradStudentsModel
@{
    ViewBag.Title = "Add Students to "+ Model.GradDetailName;
}

<h3 class="blueHeader">
    Add Student(s) to @Model.GradDetailName
</h3>

@using (Html.BeginForm("AddStudents", "Graduation", null, FormMethod.Post,
        new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div>
            @Html.Raw(Html.UnEncodedValidationSummary())
        </div>

        @Html.EditorFor(m => m.ProgramSelectItem)

        @Html.HiddenFor(x => x.GradDetailId)
        
        <div class="pull-right">
            @*<input type="submit" value="Save" class="btn saveBtn" />*@
            <button type="submit" class="btn saveBtn">
                Next
                <span class="glyphicon glyphicon-chevron-right"></span>
            </button>
            <input type="button" value="Cancel"
                onclick="javascript: cancelSubmission('@Url.Action("ViewGradDetail", "Graduation", new {id = Model.GradDetailId})');" class="btn delBtn" />
        </div>
    </div>
}


