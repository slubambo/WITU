@model ARMSv2.Models.Result.PublishForm

@{
    ViewBag.Title = "Publish Results Filter";
}

<div>
    <h2 class="blueHeader">Publish</h2>

    <div>
        <p>
            Please specify the following fields.
        </p>
        @using (Html.BeginForm("PublishResults", "Result", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <div>
                    @Html.Raw(Html.UnEncodedValidationSummary())
                </div>
                @Html.EditorFor(m => m.YearSemesterPogramSelectItem)
                
                <div class="form-group col-sm-12">
                    @Html.LabelFor(m => m.AcademicYearId, new { @class = "col-md-4 col-sm-4 control-label" })
                    <div class="col-md-8  col-sm-8">
                       @Html.DropDownWithModelSelectable(m => m.AcademicYearId, Model.AcademicYearOptions,
                              Model.YearSemesterPogramSelectItem.ProgramSelectItem.AdministrativeSelectItem.DefaultFirstItem,
                              new { @class = "form-control", id = "drpdwn-academic-yearId" })
                        <small><em>The academic year when the course was done.</em></small>
                    </div>
                </div>

                @Html.HiddenFor(m => m.Staff.Id)
                @Html.HiddenFor(m => m.AcademicYearId)

                <div class="pull-right">
                    <input type="submit" value="Load Results" class="btn saveBtn" />
                </div>
            </div>
        }

    </div>
</div>