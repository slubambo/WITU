@using ARMSv2.Utils
@model ARMSv2.Models.AddOrEditFunctionalFees

@{
    ViewBag.Title = "Ndejje University Records Management System";
}

<h2 class="blueHeader col-xs-12">Add/Edit Functional Fees</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group col-xs-12">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-sm-3 col-md-2" })
            <div class="">
                @Html.TextBoxFor(model => model.Name, new { @class = "col-xs-12 col-md-6" })&nbsp;
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group col-xs-12">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-sm-3 col-md-2" })
            <div class="">
                @Html.TextAreaFor(model => model.Description, new { @class = "col-xs-12 col-md-6" })&nbsp;
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group col-xs-12">
            @Html.LabelFor(model => model.StartAcademicYear, new { @class = "control-label col-sm-3 col-md-2" })
            <div class="">
                @Html.DropDownWithModelSelectable(model => model.StartAcademicYear, Model.AcademicYearOptions,
             new SelectListItem() { Value = "0", Text = "-- Select Academic Year --" }, new { @class = "col-xs-12 expandSelect col-md-6" })&nbsp;
                @Html.ValidationMessageFor(model => model.StartAcademicYear)
            </div>
        </div>

