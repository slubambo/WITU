@using ARMSv2.Utils
@model ARMSv2.Models.Finance.EditInvoiceOrPayment

@{
    ViewBag.Title = "Edit Invoice Detail";
    Layout = null;
   
}
<div class="">

    <p class="greyHeader">Edit Payment Detail</p>
    <p class="alert-warning">You can only edit the amount paid</p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.FeeName, new { @class = "control-label col-md-3" })
                <div class="col-md-9 progCoreInput">
                    @Html.TextBoxFor(model => model.FeeName, new { autocomplete = "off", @readonly="readonly"})
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.Paid, new { @class = "control-label col-md-3" })
                <div class="col-md-9 progCoreInput">
                    @Html.TextBoxFor(model => model.Paid, new { autocomplete = "off" })
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.Balance, new { @class = "control-label col-md-3" })
                <div class="col-md-9 progCoreInput">
                    @Html.TextBoxFor(model => model.Balance, new { autocomplete = "off", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3"></div>
                <div class="col-md-9 noMarginCol">
                   <div class="">
                            <input type="submit" value="Update" class="btn saveBtn" />
                       <input type="button" value="Cancel"
                              onclick="javascript:  window.history.go(-1);" class="btn delBtn" />
                        </div>

                        <div class="clearfix"></div>
                        <br />
              
                </div>

            </div>
        </div>

        @Html.HiddenFor(x => x.InvoiceDetailId)
        @Html.HiddenFor(x => x.PaymentId)
    }
</div>


