@using ARMSv2.Utils
@model ARMSv2.Models.AddOrEditSpecialCharge

@{
    ViewBag.Title = "Add/Edit Special Charge";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="blueHeader">Add/Edit Special Charge</h4>
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.SpecialChargeId)
        @Html.HiddenFor(model => model.DetailId)

        <div class="form-group">
            @Html.LabelFor(model => model.Particular, new { @class = "control-label col-sm-3 col-md-2" })
            <div class="">
                @Html.TextBoxFor(model => model.Particular, new { @class = "col-xs-12 col-md-6" })&nbsp;
                @Html.ValidationMessageFor(model => model.Particular)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-sm-3  col-md-2" })
            <div class="">
                @Html.TextAreaFor(model => model.Description, new { @class = "col-xs-12 col-md-6" })&nbsp;
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartAcademicYear, new { @class = "control-label col-sm-3 col-md-2" })
            <div class="">
                @Html.DropDownWithModelSelectable(model => model.StartAcademicYear, Model.AcademicYearOptions,
      new SelectListItem() { Value = "0", Text = "-- Select Academic Year --" }, new { @class = "col-xs-12 expandSelect col-md-6" }) &nbsp;
                @Html.ValidationMessageFor(model => model.StartAcademicYear)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rate, new { @class = "control-label col-sm-3 col-md-2" })
            <div class="">
                @Html.TextBoxFor(model => model.Rate, new { @class = "col-xs-12 col-md-6" }) &nbsp;
                @Html.ValidationMessageFor(model => model.Rate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UsdRate, new { @class = "control-label col-sm-3 col-md-2" })
            <div class="">
                @Html.TextBoxFor(model => model.UsdRate, new { @class = "col-xs-12 col-md-6" }) &nbsp;
                @Html.ValidationMessageFor(model => model.UsdRate)
            </div>
        </div>


        <div class="col-sm-10 col-md-8 nopadding">
            <div class="pull-right">
                <input type="submit" value="Save" class="btn saveBtn" />
                @Html.ActionLink("Cancel", "SpecialCharges", "Financial", null, new { @class = "btn delBtn nofloat" })
            </div>
            <div class="clearfix"></div>
        </div>

    </div>
}