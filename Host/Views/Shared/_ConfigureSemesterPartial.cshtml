                        @Html.LabelFor(m => m.StartDate, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="input-group">
                                <label class="input-group-addon btn" for="StartDate"><span class="glyphicon glyphicon-calendar" data-for="StartDate"></span></label>
                                @Html.TextBoxFor(m => m.StartDate, "{0:dd/MM/yyyy}", new { @class = "date-start-date" })
