@using WITU.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Change Password";
}
<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-sm-8 col-xs-12">
        @if (ViewBag.HasLocalPassword)
        {
            @Html.Partial("_ChangePasswordPartial")
        }
        else
        {
            @Html.Partial("_SetPasswordPartial")
        }

        <section id="externalLogins">
            @*@Html.Action("RemoveAccountList")
            @Html.Partial("_ExternalLoginsListPartial", new { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })*@
        </section>
    </div>

    <div class="col-sm-4 col-xs-12 tips">
        <h3 class="greyHeader ">
            Tips
        </h3>

        <p class="explanation">
            Your password should be at least 6 characters in length.
        </p>
        <p class="explanation">
            Do not use the same password that you use for other online accounts.
        </p>
        <p class="explanation">
            Use a combination of letters, numbers, and punctuations.
        </p>
        <p class="explanation">
            Passwords are case-sensitive so remember to check your "CAPS" lock key.
        </p>
        <p class="explanation">
            Please do change your password on occasion.
        </p>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
