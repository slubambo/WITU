                        <div class="col-lg-4">
                            <h3 class="hidden-xs hidden-sm">@gi.Title</h3>
                            <img src="@ViewBag.InformationDeskResourcesUrl@gi.DefaultImageFilelName" class="img img-responsive" />
                            <p class="right text-justify">
                                @gi.ShortDescription
                                @Html.ActionLink("Read More", "GeneralInformation", "InformationDesk", new { id = gi.Id }, new { @class = "moreLink" })
                            </p>
                        </div>
                    }
                </section>
            </div>

