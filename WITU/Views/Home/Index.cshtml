@model WITU.Models.HomeView

@{
    ViewBag.Title = "Home Page";
}

<div class="homeWrap">
    <div class="jumbotron welcomediv">
        <h1 class="center jbtn-title"><span class="jbtn-title-one">Teach.</span> <span class="jbtn-title-two">Create.</span> <span class="jbtn-title-three">Learn.</span></h1>
        <br /><br />
        <button type='button' class='btn btn-primary center-block btn-lg btn-witu-bg'>Join for free</button>
    </div>
