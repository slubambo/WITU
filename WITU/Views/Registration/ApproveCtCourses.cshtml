@model List<WITU.Models.Registration.AddCtResults>
@{
    Layout = null;
}
<script src="~/Scripts/base/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/base/jquery.validate.js"></script>
<script src="~/Scripts/base/jquery.validate.unobtrusive.js"></script>
@using (Html.BeginForm("ApproveCtCourses", "Registration", FormMethod.Post))
{
    @Html.ValidationSummary(false)
    <p class="greyHeader">Add Results for the Course</p>
    for (int i = 0; i < Model.Count; i++)
    {
        var counter = i + 1;
        <p>@counter: @Model[i].Course.Name</p>
        <div class="form-group">
            @Html.HiddenFor(m => m[i].StudentCourseId)
            @Html.LabelFor(m => m[i].ContinousAssessment, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m[i].ContinousAssessment, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m[i].ContinousAssessment)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m[i].ExaminationMark, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m[i].ExaminationMark, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m[i].ExaminationMark)
            </div>
        </div>


    }
    <button type="submit" class="btn saveBtn" id="btn-add-credit-transfer">
        Save
    </button>
    <span id="sp-loading-icon" class="fa fa-2x fa-spinner fa-spin hide"></span>
}



