@using System.Globalization
@using System.Activities.Expressions
@using WITU.Core.Model
@using WITU.Utils
@model WITU.Models.RegistrationView

@{
    ViewBag.Title = "Credit Transfer - Students";
    Html.EnableClientValidation();
}

<h2 class="blueHeader">Registration Management - Credit Transfer</h2>
<p class="greyHeader">Current Exemption Requests: Student List</p>
@{
    int i = 1;
}
<table class="dataTable">
    <thead>

        <tr>
            <th>
                SN
            </th>
            <th>
                Registration Number
            </th>
            <th>
                Name
            </th>

        </tr>

    </thead>
    <tbody>
        @foreach (var m in Model.Students)
        {
            <tr onclick="location.href = '@Url.Action("StudentCreditTransferDetails", "Registration", new { id = @m.Id })'" style="cursor: pointer;" title="View Exemption Request Details">
                <td>
                    @i.ToString()
                </td>

                <td>
                    @m.RegistrationNumber

                </td>
                <td>
                    @m.Person.FullName
                </td>

            </tr>
            i++;
        }

    </tbody>

</table>