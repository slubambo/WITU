@using WITU.Utils
@model WITU.Models.Registration.StudentRegModelView

@{
    ViewBag.Title = Model.Student != null ? "Delete Registered Courses for " + Model.Student.Person.FullName : "Delete Registered Courses";
} 

<div class="">

    <p class="greyHeader">You have Selected the following Courses to Delete, Click Ok to Continie or Cancel to Return</p>
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)

            <div class="form-group">
                <ul>
                    @foreach (var c in Model.SelectedCources)
                    {
                        <li>
                            @c.Course.Name
                        </li>
                    }
                </ul>
                    
            </div>

            <div class="form-group">
                <div class="col-md-3"></div>
                <div class="col-md-9 noMarginCol">
                    @if (Model.SelectedCources.Any())
                    {
                        <div class="">
                            <input type="submit" value="Create" class="btn saveBtn" />
                            <input type="button" value="Cancel"
                                   onclick="javascript: cancelSubmission('@Url.Action("StudentRegistrationDetails", "Registration", null)');" class="btn delBtn" />
                        </div>

                        <div class="clearfix"></div>

                        <br />

                    }
                    
                </div>

            </div>
        </div>

        @Html.HiddenFor(x => x.Student)
        @Html.HiddenFor(x => x.SelectedCources)
    }
    
</div>
