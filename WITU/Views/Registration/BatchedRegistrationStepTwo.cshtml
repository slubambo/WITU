@model WITU.Models.Registration.BatchedRegSteps.BatchedStepTwo
@{
    ViewBag.Title = "Step Two Batched Registration";
}

<h2 class="blueHeader">Batched Registration</h2>

<h3 class="greyHeader">Step 3: Select Location of Records</h3>

<div class="well-sm">
    <p>
        Specify Start and Rows and Columns for Registration Numbers and Payslip Serial Numbers.
    </p>
</div>

<div>
    @using (Html.BeginForm("BatchedRegistrationStepTwo", "Registration", null, FormMethod.Post,
            new { @class = "form-horizontal", role = "form" }))
{
        @Html.AntiForgeryToken()
        <div class="form-horizontal">

            <div>
                @Html.Raw(Html.UnEncodedValidationSummary())
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.WorkSheetSelected, new { @class = "col-md-2 control-label" })
                <div class="col-md-10 progCoreInput">
                    @Html.DropDownWithModelSelectable(m => m.WorkSheetSelected, Model.WorkSheetNames, null,
                        new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.StartRow, new { @class = "col-md-2 control-label" })
                <div class="col-md-10 progCoreInput">
                    @Html.EditorFor(m => m.StartRow, new { @class = "form-control", type = "number" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.EndRow, new { @class = "col-md-2 control-label" })
                <div class="col-md-10 progCoreInput">
                    @Html.EditorFor(m => m.EndRow, new { @class = "form-control", type = "number" })
                </div>
            </div>
            <br />
            <div class="col-lg-3 col-lg-push-7">
                @*<input type="submit" value="Save" class="btn saveBtn" />*@
                <button type="submit" class="btn saveBtn">
                    Next
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </button>
            </div>
        </div>
    }
</div>